<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingTop="10dp"
    android:paddingEnd="18dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/item_detail_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_nine"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_detail_tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_nine"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_detail_view_income"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLines"
        app:layout_constraintTop_toBottomOf="@id/item_detail_tv_income" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_detail_rcy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_view_income" />


</androidx.constraintlayout.widget.ConstraintLayout>